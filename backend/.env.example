# Environment
NODE_ENV=development

# Server
PORT=3001
CORS_ORIGIN=http://localhost:3000

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration
# Option 1: Local Redis (recommended for development)
REDIS_URL=redis://localhost:6379

# Option 2: Cloud Redis (Redis.io, AWS ElastiCache, etc.)
# REDIS_HOST=redis-xxxxx.c256.us-east-1-2.ec2.redns.redis-cloud.com
# REDIS_PORT=10897
# REDIS_USERNAME=default
# REDIS_PASSWORD=your_redis_password

# Firebase Configuration (for authentication)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
USE_FIREBASE_STORAGE=false
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Supabase Configuration (for database and optional storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_BUCKET=uploads
USE_SUPABASE=false

# File Processing
MAX_FILE_SIZE_BYTES=10485760
JOB_TTL_SECONDS=86400
MAX_PDF_PAGES=10

# Rate Limiting
RATE_LIMIT_UPLOADS_PER_HOUR=10

# Observability
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
